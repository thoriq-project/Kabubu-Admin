<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/card_view_budayawan"
    android:layout_marginTop="8dp"
    android:layout_centerInParent="true"
    app:cardBackgroundColor="#aaa"
    >

    <LinearLayout
        android:id="@+id/linearLayout18"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_cardview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_bg"
            app:civ_border_color="@color/biruterang"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout18"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_nama_profile_cardview"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:autoSizeMaxTextSize="25dp"
            android:autoSizeMinTextSize="15dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/baloobold"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:text="Sujiwo Tedjo"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/img_profile_cardview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/ttl"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_below="@id/txt_nama_profile_cardview"
            android:layout_alignParentRight="true"
            android:text="Tempat Tanggal Lahir :"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/img_profile_cardview"
            app:layout_constraintTop_toBottomOf="@+id/txt_nama_profile_cardview" />

        <TextView
            android:id="@+id/txt_tempatlahir_profile_cardview"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:layout_above="@id/txt_tanggallahir_profile_cardview"
            android:layout_below="@+id/ttl"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/baloomedium"
            android:gravity="center_vertical"
            android:hint="Semarang"
            android:textAlignment="gravity"
            android:textSize="18dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/txt_tanggallahir_profile_cardview"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/img_profile_cardview"
            app:layout_constraintTop_toBottomOf="@+id/ttl" />

        <TextView
            android:id="@+id/txt_tanggallahir_profile_cardview"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/baloomedium"
            android:gravity="center_vertical"
            android:hint="28  October 1997"
            android:textSize="18dp"

            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/img_profile_cardview"
            app:layout_constraintTop_toBottomOf="@+id/txt_tempatlahir_profile_cardview" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>