<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puisi.PuisiActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_puisi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        app:title="Puisi Admin"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/menu_add_puisi"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/puisi_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_puisi"
        android:layout_marginHorizontal="10dp"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_puisi_admin"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />

</RelativeLayout>