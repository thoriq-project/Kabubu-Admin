<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail.BookDetailActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="155dp"
            android:layout_height="235dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_book_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@color/birulaut"
                android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txt_kategori_detail"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Kategori"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@color/cream"
                    android:textStyle="italic"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="235dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_judul_detail"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:textSize="25sp"
                android:fontFamily="@font/baloobold"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Hidup itu Harus Pintar Ngegas Ngerem"
                android:textAlignment="gravity" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Penulis :"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_penulis_detail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:fontFamily="@font/baloobold"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Emha Ainun Nadjib" />

            <Button
                android:id="@+id/button_buy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_buy"
                android:text="Buy via Website"
                android:textAllCaps="false"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:padding="15dp"
            android:background="@drawable/custom_bg_book_detail"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Deskripsi : "
                android:textSize="20dp"
                android:fontFamily="@font/balooregular"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/txt_deskripsi_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/deskripsi"
                android:fontFamily="@font/balooregular"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>