<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_slide_ob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ob1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/img_slide_ob">


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_slider"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ob_header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txt_ob_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balooregular"
                android:paddingHorizontal="10dp"
                android:text="Aplikasi katalog buku \n budayawan Indobnesia!"
                android:textAlignment="center"
                android:textColor="@color/main_color"
                android:textSize="18sp" />

        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_ob_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloobold"
        android:text="Selamat Datang \n di Kabubu"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_slide_ob" />

</androidx.constraintlayout.widget.ConstraintLayout>