<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Budayawan.BudayawanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/budayawan_toolbar"
        app:title="Profile Budayawan Admin"
        app:titleTextColor="@android:color/white"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/menu_budayawan"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_budayawan"
        android:layout_below="@id/budayawan_toolbar"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_budayawan_admin"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />


</RelativeLayout>